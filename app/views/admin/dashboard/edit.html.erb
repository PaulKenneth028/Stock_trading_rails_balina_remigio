<section class="hero is-fullheight">
    <div class="container has-text-centered">
      <div class="LandingBox box p-6">
  <h1 class="title">Edit User</h1>

  <%= form_for(@user, url: admin_dashboard_path(@user), method: :patch, html: { class: 'form' }) do |f| %>

    <div class="field">
      <%= f.label :first_name, class: 'label' %>
      <div class="control">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :last_name, class: 'label' %>
      <div class="control">
        <%= f.text_field :last_name, autocomplete: "last_name", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.text_field :email, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :admin, class: 'label' %>
      <label class="checkbox">
        <%= f.check_box :admin %>
        Admin
      </label>
    </div>

    <div class="field">
      <%= f.label :status, class: 'label' %>
    </div>

    <div class="field">
      <div class="control">
          <%= button_to 'Delete Account', admin_dashboard_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'button is-danger' %>
        <%= f.submit 'Update User', class: "button is-primary" %>
      </div>
    </div>

  <% end %>

  <%= link_to 'Back to Users', admin_dashboard_index_path, class: "button is-link" %>
</div>
</div>
</section>