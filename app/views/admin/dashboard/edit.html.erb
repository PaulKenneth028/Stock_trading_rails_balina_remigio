<h1>Edit User</h1>

<%= form_for(@user, url: admin_dashboard_path(@user), method: :patch) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>

  <%= f.submit 'Update User' %>
<% end %>

<%= link_to 'Back to Users', admin_dashboard_index_path %>