<h1>Edit User</h1>

<%= form_for(@user, url: admin_dashboard_path(@user), method: :patch) do |f| %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autocomplete: "last_name", class: "input" %>
  </div>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :admin %>
    <%= f.check_box :admin, class: "checkbox" %>
  </div>

  <div class="field">
    <%= f.submit 'Update User', class: "button is-primary" %>
  </div>

<% end %>

<%= link_to 'Back to Users', admin_dashboard_index_path, class: "button is-link" %>
