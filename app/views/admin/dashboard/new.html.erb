<section class="hero is-fullheight">
    <div class="container has-text-centered">

<div class="LandingBox box p-6">
  <h1 class="title is-size-1">Add User</h1>

  <%= form_for @user, url: admin_dashboard_index_path, html: { class: 'form' } do |f| %>

    <div class="field">
      <%= f.label :first_name, class: 'label' %>
      <div class="control">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :last_name, class: 'label' %>
      <div class="control">
        <%= f.text_field :last_name, autocomplete: "last_name", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.text_field :email, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class="control">
        <%= f.password_field :password, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :admin, class: 'label' %>
      <label class="checkbox">
        <%= f.check_box :admin %>
        Admin
      </label>
    </div>

    <div class="field">
      <div class="control">
        <%= f.submit 'Create User', class: "button is-primary" %>
      </div>
    </div>

  <% end %>

  <%= link_to 'Back to Users', admin_dashboard_index_path, class: "button is-link mt-4" %>
</div>

</div>
</section>